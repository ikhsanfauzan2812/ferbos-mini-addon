{
  "name": "Ferbos Mini Addon",
  "version": "1.0.0",
  "slug": "ferbos_addon_query",
  "description": "A mini addon to query Home Assistant database via HTTP API",
  "url": "https://github.com/ikhsanfauzan2812/ferbos-mini-addon",
  "panel_icon": "mdi:database-search",
  "arch": ["amd64", "armv7", "aarch64"],
  "startup": "application",
  "boot": "auto",
  "map": ["config:rw"],
  "ingress": true,
  "options": {
    "port": 8080,
    "database_path": "/config/home-assistant_v2.db",
    "enable_external_access": true,
    "api_key": "",
    "enable_websocket": true,
    "rate_limit": 100,
    "allow_all_queries": false,
    "allowed_tables": []
  },
  "schema": {
    "port": "int",
    "database_path": "str",
    "enable_external_access": "bool",
    "api_key": "str",
    "enable_websocket": "bool",
    "rate_limit": "int",
    "allow_all_queries": "bool",
    "allowed_tables": ["str"]
  },
  "ports": {
    "8080/tcp": 8080
  },
  "ports_description": {
    "8080/tcp": "Database Query API"
  }
}
