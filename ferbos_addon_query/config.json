{
  "name": "Ferbos Mini Addon",
  "version": "1.0.0",
  "slug": "ferbos_addon_query",
  "description": "A mini addon to query Home Assistant database via HTTP API",
  "url": "https://github.com/ikhsanfauzan2812/ferbos-mini-addon",
  "panel_icon": "mdi:database-search",
  "arch": ["amd64", "armv7", "aarch64"],
  "startup": "application",
  "boot": "auto",
  "map": ["config:rw"],
  "ingress": false,
  "options": {
    "port": 8080,
    "database_path": "/config/home-assistant_v2.db"
  },
  "schema": {
    "port": "int",
    "database_path": "str"
  },
  "ports": {
    "8080/tcp": 8080
  },
  "ports_description": {
    "8080/tcp": "Database Query API"
  }
}
